<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.ammar.todo">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDo">

        <activity
            android:name=".ui.main.view.SplashScreen"
            android:theme="@style/Theme.ToDo.Fullscreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.view.Welcome"
            android:theme="@style/Theme.ToDo.Fullscreen" />

        <activity android:name=".ui.main.view.MainActivity" />

        <activity
            android:name=".ui.main.view.DetailsActivity"
            android:label="@string/details"
            android:parentActivityName=".ui.main.view.MainActivity" />

    </application>

</manifest>